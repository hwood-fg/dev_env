{
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "ruby.rubocopAutocorrect": false
    }
  },
  "[markdown]": {
    "editor.formatOnSave": true
  },
  "[rust]": {
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "svelte.svelte-vscode"
    // "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "cSpell.userWords": [
    "Alderaan",
    "architecting",
    "blockchain",
    "Cryptographically",
    "funder",
    "harlantwood",
    "Heroku",
    "HOLOMATRIX",
    "OCTOKIT",
    "orderbook",
    "perspect",
    "sharded",
    "sharex",
    "sveltejs",
    "vism",
    "wikinodes"
  ],
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "ruby.lint": {
    "reek": false,
    "rubocop": true,
    "ruby": false,
    "fasterer": false,
    "debride": false,
    "ruby-lint": false
  },
  "breadcrumbs.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnSaveTimeout": 1500,
  "editor.formatOnType": false,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "elixirLS.fetchDeps": false,
  "eslint.packageManager": "yarn",
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "files.autoSave": "onFocusChange",
  "files.hotExit": "onExitAndWindowClose",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.ignoreMissingGitWarning": true,
  "markdown.extension.orderedList.autoRenumber": false,
  "plantuml.exportOutDir": ".",
  "ruby.codeCompletion": "rcodetools",
  "ruby.format": "rubocop",
  "ruby.intellisense": false,
  "ruby.useBundler": true,
  "ruby.useLanguageServer": false,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.useBundler": false,
  "window.newWindowDimensions": "maximized",
  "window.openFoldersInNewWindow": "on",
  "window.restoreWindows": "all",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "[diff]": {},
  "terminal.integrated.scrollback": 100000,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.activityBar.visible": false,
  "tabnine.experimentalAutoImports": true,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.fontFamily": "MonoLisa, Fira Code, Hack, Inconsolata, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  // "editor.lineHeight": 0,
  "terminal.integrated.fontSize": 14,
  // "terminal.integrated.fontFamily": "MonoLisa",
  // "terminal.integrated.fontWeight": "normal",
  // "terminal.integrated.fontWeightBold": "bold",
  // "terminal.integrated.lineHeight": 1,
  "terminal.integrated.localEchoStyle": "#c0c",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "redhat.telemetry.enabled": false,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "json.schemas": [],
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "workbench.panel.defaultLocation": "right",
  "plantuml.server": "https://www.plantuml.com/plantuml",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "rust": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "security.workspace.trust.untrustedFiles": "open",
  "plantuml.java": "",
  "plantuml.render": "PlantUMLServer",
  "workbench.editor.showTabs": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "workbench.colorTheme": "Night Owl",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.unicodeHighlight.invisibleCharacters": false,
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "extensions.ignoreRecommendations": true,
  "window.zoomLevel": 2,
  "remote.SSH.defaultExtensions": [
    "gitpod.gitpod-remote-ssh"
  ]
}
